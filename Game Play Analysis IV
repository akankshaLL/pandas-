SELECT
  ROUND(
    COUNT(t2.player_id) / COUNT(DISTINCT t1.player_id),
    2
  ) AS fraction
FROM
  Activity t1
  LEFT JOIN (
    SELECT
      player_id,
      DATE_ADD(MIN(event_date), INTERVAL 1 DAY) AS next_day_login
    FROM
      Activity
    GROUP BY
      player_id
  ) t2 ON t1.player_id = t2.player_id
  AND t1.event_date = t2.next_day_login;
